# move window focus
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east
cmd - 6 : yabai -m window --focus recent

# swap window
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - h : yabai -m window --swap west
cmd + shift - l : yabai -m window --swap east
cmd + shift - 6 : yabai -m window --swap recent

# window manupulation
cmd + shift - f : yabai -m window --toggle float
cmd + shift - b : yabai -m window --toggle border
cmd + shift - s : yabai -m window --toggle sticky
cmd + shift - z : yabai -m window --toggle zoom-fullscreen

cmd + shift - e : yabai -m space --balance
cmd + shift - x : yabai -m space --mirror x-axis
cmd + shift - y : yabai -m space --mirror y-axis
cmd + shift - r : yabai -m space --rotate 90

# open kitty terminal
cmd - return : nice -n -19 /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
